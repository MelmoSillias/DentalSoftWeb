{% extends 'appbase.html.twig' %}

{% block title %}Consultations Clôturées{% endblock %}



{% block main %}
<div class="container-fluid px-4">
    <h1 class="mt-4">Consultations Clôturées</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active"><i class="fas fa-home"></i></li>
        <li class="breadcrumb-item active">Consultations Clôturées</li>
    </ol>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-table me-1"></i> Liste des consultations clôturées
            </h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="closedConsultationsTable" class="table table-bordered table-striped my-4" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>N°</th>
                            <th>Date</th>
                            <th>Patient</th>
                            <th>Médecin</th>
                            <th>Salle</th> 
                            <th>Actions</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

{# Modal Détails Consultation amélioré #}
<div class="modal fade" id="consultationDetailsModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      
      <div class="modal-header bg-primary text-white">
        <h5 class="modal-title"><i class="fas fa-info-circle me-2"></i>Détails de la Consultation</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      
      <div class="modal-body">
        {# --- En-tête Info générale --- #}
        <div class="row mb-4">
          <div class="col-md-6">
            <strong>N° Consultation :</strong> <span id="detail-id"></span><br>
            <strong>Date :</strong> <span id="detail-date"></span><br>
            <strong>Patient :</strong> <span id="detail-patient"></span>
          </div>
          <div class="col-md-6">
            <strong>Médecin :</strong> <span id="detail-medecin"></span><br>
            <strong>Infirmier :</strong> <span id="detail-infirmier"></span><br>
            <strong>Salle :</strong> <span id="detail-salle"></span>
          </div>
        </div>

        {# --- Note de séance --- #}
        <div class="mb-4">
          <h6 class="text-secondary"><i class="fas fa-sticky-note me-1"></i>Note de séance</h6>
          <p id="detail-note" class="ps-3 border-start border-4 border-secondary"></p>
        </div>

        {# --- Actes médicaux sous forme de tableau --- #}
        <div>
          <h6 class="text-secondary"><i class="fas fa-tools me-1"></i>Actes médicaux réalisés</h6>
          <div class="table-responsive">
            <table class="table table-sm table-bordered align-middle mb-0">
              <thead class="table-light">
                <tr>
                  <th scope="col">Dent</th>
                  <th scope="col">Type d’acte</th>
                  <th scope="col">Description</th>
                  <th scope="col" class="text-end">Quantité</th>
                  <th scope="col" class="text-end">Prix unitaire</th>
                  <th scope="col" class="text-end">Total</th>
                </tr>
              </thead>
              <tbody id="detail-actes">
              </tbody>
            </table>
          </div>
        </div>
      </div>
<!-- 
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary btn-closer" data-bs-dismiss="modal">Fermer</button>
      </div> -->
    </div>
  </div>
</div>

{% endblock %}

{% block javascripts %} 
    <script src="{{ asset('js/closedconsult.js') }}"></script>
{% endblock %}
