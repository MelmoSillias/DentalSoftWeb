{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur DentalSoft!{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <style>
        body {
            background-color: #f8fbff;
            font-family: 'Poppins', sans-serif;
            overflow-x: hidden;
        }

        .landing-container {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 2rem 1rem;
            text-align: center;
            position: relative;
        }

        .logo-container img {
            width: 120px;
            animation: float 3s ease-in-out infinite;
        } 

        @keyframes float {
            0% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
            100% { transform: translateY(0); }
        }

        .title {
            font-weight: 700;
            font-size: 2.5rem;
            color: #212529;
            animation: fadeInDown 1s ease-in-out;
        }

        .subtitle {
            font-size: 1.2rem;
            color: #6c757d;
            margin-bottom: 1.5rem;
            animation: fadeIn 2s ease-in-out;
        }

        .btn-custom {
            font-size: 1.1rem;
            padding: 12px 30px;
            background-color: #5dade2;
            border: none;
            color: white;
            border-radius: 30px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .btn-custom:hover {
            transform: scale(1.05);
            box-shadow: 0 0 20px rgba(93, 173, 226, 0.6);
            color: rgba(93, 173, 226);
        }

        .illustration img {
            width: 100%;
            max-width: 600px;
            animation: zoomIn 1s ease-in-out;
        }

        @media (min-width: 768px) {
            .landing-container {
                flex-direction: row;
                text-align: left;
                padding: 4rem 5%;
            }

            .left-col, .right-col {
                flex: 1;
                padding: 1rem;
            }

            .title {
                font-size: 3rem;
            }

            .subtitle {
                font-size: 1.25rem;
            }

            .logo-container img {
                width: 140px;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="landing-container">
    <div class="left-col animate__animated animate__fadeInLeft col-md-4">
        <div class="logo-container mb-3">
            <img src="{{ asset('img/logo.png') }}" alt="Logo DentalSoft">
        </div>
        <h1 class="title">DentalSoft</h1>
        <p class="subtitle">Gestion de cabinet dentaire dédiée à<br><strong>CABINET ORODENT</strong></p>

        <a href="{{ path('app_login') }}" class="btn btn-custom mt-3 animate__animated animate__fadeInUp">
            <i class="fas fa-tooth me-2"></i> Se connecter
        </a>
    </div>

    <div class="right-col illustration d-none d-md-block col-md-8">
        <img src="{{ asset('img/landing-illustration.png') }}" alt="Illustration DentalSoft">
    </div>
</div>
{% endblock %}

